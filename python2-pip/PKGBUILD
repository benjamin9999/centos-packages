pkgname=rqdq-python2-pip
pkgver=7.1.2
pkgrel=1
makedepends=()
source=()

prefix="opt/rqdq"

package() {
  fpmx_python "$pkgname" \
    -d "rqdq-python2-libs >= 2.7.10" \
    -d "rqdq-python2-setuptools >= 18.3.2" \
    --python-bin /${prefix}/bin/python \
    --python-easyinstall /${prefix}/bin/easy_install \
    pip
}

root_install() {
  yum -y install "${pkgname}-${pkgver}-${pkgrel}.noarch.rpm"
}
