pkgname=rqdq-python2-virtualenv
pkgver=13.1.2
pkgrel=3
pkgdesc='Virtual Python Environment builder'
url='https://pypi.python.org/pypi/virtualenv'
_libname=virtualenv
_prefix="opt/rqdq"
depends=('rqdq-python2-libs = 2.7.10' 'rqdq-python2-setuptools')
makedepends=()
arch=('any')
source=(http://pypi.python.org/packages/source/${_libname:0:1}/$_libname/$_libname-$pkgver.tar.gz)
md5sums=('b989598f068d64b32dead530eb25589a')

build() {
  cd "$srcdir/$_libname-$pkgver"
  /$_prefix/bin/python setup.py build
}

package() {
  cd "$srcdir/$_libname-$pkgver"
  /$_prefix/bin/python setup.py install --skip-build -O1 --root="$pkgdir"
}
