pkgname=pycharm
pkgver=5.0.0
pkgrel=3
pkgdesc='Powerful Python and Django IDE'
url='http://www.jetbrains.com/pycharm/'
depends=('java-1.8.0-openjdk')
makedepends=()
source=(http://download.jetbrains.com/python/pycharm-professional-5.0.tar.gz)
sha256sums=('066ca91c7d810765a96e82673d4241de855b82cd0d46dc88e46f00da00789c9a')

package() {
  mkdir -p $pkgdir/opt
  mkdir -p $pkgdir/usr/bin
  cp -a * $pkgdir/opt/
  ln -sfn pycharm-5.0 $pkgdir/opt/pycharm
  ln -sfn /opt/pycharm/bin/pycharm.sh $pkgdir/usr/bin/pycharm
}
