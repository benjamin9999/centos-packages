pkgname=pycharm
pkgver=4.5.4
pkgrel=1
depends=('java-1.8.0-openjdk')
makedepends=()
source=(http://download-cf.jetbrains.com/python/pycharm-professional-${pkgver}.tar.gz)
md5sums=('5a6c36ee027087b15204aedeed98bbd2')

package() {
  mkdir -p $pkgdir/opt
  mkdir -p $pkgdir/usr/bin
  cp -a * $pkgdir/opt/
  ln -sfn pycharm-${pkgver} $pkgdir/opt/pycharm
  ln -sfn /opt/pycharm/bin/pycharm.sh $pkgdir/usr/bin/pycharm
    
  fpmx "$pkgname" \
    --directories /opt/pycharm-${pkgver} \
    opt usr
}
